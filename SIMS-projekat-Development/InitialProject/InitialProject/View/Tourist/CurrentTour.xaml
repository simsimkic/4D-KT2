<Window x:Class="InitialProject.View.Tourist.CurrentTour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.Tourist"
        mc:Ignorable="d"
        Title="CurrentTour" Height="450" Width="800">

    <StackPanel>
        <StackPanel Margin="0,0,127,0">
            <Label x:Name="TourNameLabel" Content="------" Height="96" FontSize="50" />
        </StackPanel>
        <StackPanel Margin="0,0,127,0">
            <Label x:Name="CurrentCheckPointLabel" Content="------" Height="40" FontSize="20" Width="665" RenderTransformOrigin="0.506,-0.418" />
        </StackPanel>
        <Button Click="OpenRateTour" Height="30" Width="106" Margin="5">
            Rate this tour
        </Button>
    </StackPanel>


</Window>
