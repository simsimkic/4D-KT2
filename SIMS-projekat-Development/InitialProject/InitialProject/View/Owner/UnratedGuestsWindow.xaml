<Window x:Class="InitialProject.View.Owner.UnratedGuestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest List" Height="300" Width="400">
    <Grid>
        <ListView x:Name="GuestListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding IdGuest}" />
                    <GridViewColumn Header="Username" DisplayMemberBinding="{Binding Username}" />
                    <GridViewColumn Header="Reservation ID" DisplayMemberBinding="{Binding IdReservation}" />
                    <GridViewColumn Header="Check-In Date" DisplayMemberBinding="{Binding CheckInDate}" />
                    <GridViewColumn Header="Check-Out Date" DisplayMemberBinding="{Binding CheckOutDate}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

